#colorGuard.carousel.slide{"data-ride" => "carousel"}
  / Indicators
  %ol.carousel-indicators
    %li.active{"data-slide-to" => "0", "data-target" => "#colorGuard"}
    %li{"data-slide-to" => "1", "data-target" => "#colorGuard"}
    %li{"data-slide-to" => "2", "data-target" => "#colorGuard"}
    %li{"data-slide-to" => "3", "data-target" => "#colorGuard"}
  / Wrapper for slides
  .carousel-inner{:role => "listbox"}
    .item.active
      %img{:alt => "first", :src => "color guard/1.jpg"}
    .item
      %img{:alt => "second", :src => "color guard/2.jpg"}
    .item
      %img{:alt => "third", :src => "color guard/3.jpg"}
    .item
      %img{:alt => "fourth", :src => "color guard/4.jpg"}
  / Left and right controls
  %a.left.carousel-control{"data-slide" => "prev", :href => "#colorGuard", :role => "button"}
    %span.glyphicon.glyphicon-chevron-left{"aria-hidden" => "true"}
    %span.sr-only Previous
  %a.right.carousel-control{"data-slide" => "next", :href => "#colorGuard", :role => "button"}
    %span.glyphicon.glyphicon-chevron-right{"aria-hidden" => "true"}
    %span.sr-only Next
