!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'AFROTC Detachment 925'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Afrotc'}"}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track' => 'reload'
    = csrf_meta_tags
  %body
    #header
      = render 'layouts/navigation'
      = render 'pages/subnav', image_location: subnav_img unless subnav_img.nil?
    #wrapper
      %main{:role => "main"}
        .container
          = render 'layouts/messages'
          = yield unless request.fullpath == '/'
        = yield if request.fullpath == '/'
        .container-fluid
        %a#back-to-top.btn.btn-primary(href="#" role="button" style="background-color: rgb(193,18,33);")
          %span.glyphicon.glyphicon-chevron-up
      #push
    #footer
      = render 'layouts/footer'
