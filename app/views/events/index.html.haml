= render 'cadet_area/header', page: :event
.row
  .col-md-offset-3.col-md-6
    %table.table.table-hover
      %thead
        %tr
          %th Name
          %th Category
          %th Location
          %th Mandatory?
          %th Date
          %th
      %tbody
        - @events.each do |event|
          %tr
            %td.clickable{"data-link": "#{event_path(event)}"}= event.name
            %td.clickable{"data-link": "#{event_path(event)}"}= event.category
            %td.clickable{"data-link": "#{event_path(event)}"}= event.location
            %td.clickable{"data-link": "#{event_path(event)}"}= event.mandatory ? 'Yes' : 'No'
            %td.clickable{"data-link": "#{event_path(event)}"}= event.date.strftime('%b %d, %H:%M')
            %td
              = link_to icon('pencil-square-o'), edit_event_path(event) if policy(event).edit?
              = link_to icon('minus'), event, method: :delete, data: { confirm: 'Are you sure?' } if policy(event).destroy?

- if policy(Event).new?
  .row
    .col-md-12.text-center
      = link_to 'New Event', new_event_path, class: 'btn btn-primary'
