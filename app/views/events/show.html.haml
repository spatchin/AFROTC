.row
  .col-md-offset-3.col-md-6
    .panel.panel-default
      .panel-heading
        %h3= @event.name
      .panel-body
        %p
          %strong
            Category: 
          = @event.category if @event.category
        %p
          %strong
            Where:
          = @event.location if @event.location
        %p
          %strong
            When:
          = @event.date if @event.date
        %p
          %strong
            Mandatory:
          = @event.mandatory ? 'Yes' : 'No' if @event.mandatory
.row
  .col-md-offset-3.col-md-6
    .panel.panel-default
      .panel-heading
        %h3= pluralize(@event.users.count, 'Attendee')
      .panel-body
        %ul(style='list-style: none;')
          - @event.users.each do |user|
            %li= user.name
.row
  .col-sm-6.text-left
    = link_to 'Return to events', events_path, class: 'btn btn-default'          
  .col-sm-6.text-right
    = link_to 'Edit event', edit_event_path(@event), class: 'btn btn-link'