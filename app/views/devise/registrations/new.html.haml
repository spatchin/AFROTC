.row
  .col-md-4.col-md-offset-4
    .panel.panel-default{style: 'margin-top: 10%;'}
      .panel-heading
        %h4 Sign up
      .panel-body
        = bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form'}) do |f|
          = f.email_field :email, placeholder: 'Required', autofocus: true
          = f.text_field :name, placeholder: 'Required'
          = f.password_field :password, placeholder: 'Required'
          = f.password_field :password_confirmation, placeholder: 'Required'
          = f.submit 'Sign up', class: 'btn btn-success', style: 'width: 100%;'
