<h2 class='text-center'><%= t 'devise.invitations.edit.header' %></h2>
<div class="col-md-6 col-md-offset-3 panel panel-default">
  <div class="panel-body">
    <%= bootstrap_form_for resource, as: resource_name, url: invitation_path(resource_name), html: { :method => :put } do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :invitation_token %>
      <%= f.hidden_field :role, value: :gmc %>
      <% if f.object.class.require_password_on_accepting %>
        <%= f.text_field :name, placeholder: 'Required' %>
        <%= f.phone_field :phone_number %>
        <%= f.password_field :password, placeholder: 'Required', help: "6 characters minimum" %>
        <%= f.password_field :password_confirmation, placeholder: 'Required' %>
      <% end %>
      <hr>
      <%= f.submit t("devise.invitations.edit.submit_button") %>
    <% end %>
  </div>
</div>

